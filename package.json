{
  "name": "@valian/fireway",
  "version": "1.0.0",
  "type": "module",
  "description": "A schema migration tool for Firestore",
  "types": "lib/index.d.mts",
  "keywords": [
    "schema",
    "migration",
    "firestore",
    "typescript"
  ],
  "files": [
    "/lib",
    "/src",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "main": "lib/index.mjs",
  "exports": {
    ".": "./lib/index.mjs",
    "./package.json": "./package.json"
  },
  "bin": {
    "fireway": "lib/cli.mjs"
  },
  "repository": "git@github.com:dev-aces/fireway.git",
  "author": "Artur Ampilogov",
  "license": "MIT",
  "scripts": {
    "build": "tsdown",
    "prepare": "husky",
    "emulator": "firebase emulators:start --only firestore --project demo-fireway",
    "pretest": "mkdir -p tests/emptyMigration",
    "test": "firebase emulators:exec --only firestore --project demo-fireway 'vitest run --coverage'",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "firebase-admin": ">=12"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "consola": "^3.4.2",
    "jiti": "^2.0.0",
    "md5": "^2.3.0",
    "semver": "^7.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/md5": "^2.3.2",
    "@types/node": "^14.18.16",
    "@types/semver": "^7.3.13",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^2.0.0",
    "capture-console": "^1.0.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions-test": "^3.4.1",
    "husky": "9.1.7",
    "nanoid": "^5.1.6",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "start-server-and-test": "^1.14.0",
    "tsdown": "^0.16.6",
    "typescript": "^5.7.0",
    "vitest": "^4.0.0"
  },
  "packageManager": "pnpm@10.20.0"
}
